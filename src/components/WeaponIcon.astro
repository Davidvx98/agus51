  };
  
  return weaponImages[type] || weaponImages.karambit;
};
---

<div class={`weapon-icon ${className}`}>
  <div class="relative group">
    <div class="absolute inset-0 bg-gradient-to-r from-gold/20 via-red/20 to-gold/20 rounded-lg blur-md group-hover:blur-lg transition-all duration-300"></div>
    <div class="relative bg-gradient-to-br from-slate-800 to-slate-900 p-4 rounded-lg border border-gold/30 group-hover:border-gold/60 transition-all duration-300">
      <img src={getWeaponImage(type)} alt={name} class="w-full h-full object-contain rounded-lg" loading="lazy" />
    </div>
    <div class="absolute bottom-2 left-2 right-2 text-xs font-bold text-white bg-black/80 rounded px-2 py-1 text-center backdrop-blur-sm">
      {name}
    </div>
  </div>
</div>

<style>
  .weapon-icon {
    @apply transform transition-all duration-300 hover:scale-110;
  }
  
  .weapon-icon:hover {
    filter: drop-shadow(0 10px 20px rgba(255, 215, 0, 0.3));
  }
</style>

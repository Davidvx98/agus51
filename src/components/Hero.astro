<section class="relative flex flex-col items-center justify-center py-20 gap-8 text-center overflow-hidden">
  <!-- Hero Background Glow -->
  <div class="absolute inset-0 bg-gradient-radial from-gold/10 via-transparent to-transparent blur-3xl"></div>
  
  <!-- Logo with enhanced styling -->
  <div class="relative group">
    <div class="absolute -inset-4 bg-gradient-to-r from-gold/20 via-yellow-400/20 to-gold/20 rounded-2xl opacity-60 group-hover:opacity-80 blur-xl transition duration-500"></div>
    <div class="relative bg-gradient-to-br from-slate-800/80 to-slate-900/80 p-6 rounded-2xl border border-gold/30 backdrop-blur-sm shadow-2xl">
      <img src="https://51agustin.com/manitas.png" alt="Logo SkinClub x Agustin51" 
           class="max-w-28 max-h-28 md:max-w-36 md:max-h-36 w-auto h-auto mx-auto rounded-xl object-contain shadow-xl hover:scale-105 transition-all duration-300 filter brightness-110 contrast-110" 
           loading="lazy" />
    </div>
  </div>
  
  <!-- Main Title with gradient text -->
  <div class="relative z-10">
    <h1 class="text-4xl md:text-7xl font-black mb-4 leading-tight">
      <span class="bg-gradient-to-r from-gold via-yellow-400 to-gold bg-clip-text text-transparent animate-pulse">Juega, gana</span><br>
      <span class="text-white">y disfruta con</span><br>
      <span class="bg-gradient-to-r from-blue-400 via-cyan-300 to-blue-500 bg-clip-text text-transparent text-6xl md:text-8xl font-extrabold drop-shadow-2xl">SkinClub</span><br>
      <span class="text-gold text-3xl md:text-5xl"> x </span>
      <span class="bg-gradient-to-r from-gold via-yellow-300 to-gold bg-clip-text text-transparent">Agustín51</span>
    </h1>
    <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">La colaboración más épica entre el mejor youtuber y la plataforma de skins más confiable</p>
  </div>
  
  <!-- CTA Button with enhanced styling -->
  <div class="relative group">
    <div class="absolute -inset-2 bg-gradient-to-r from-gold via-red to-gold rounded-xl opacity-75 group-hover:opacity-100 blur transition duration-300"></div>
    <a href="https://skin.club/es/promo/AGUSTIN51" target="_blank" rel="noopener" class="relative inline-flex items-center gap-3 bg-gradient-to-r from-gold to-yellow-400 text-black font-bold px-10 py-4 rounded-xl shadow-2xl hover:scale-105 transition-all duration-300 text-xl">
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
      </svg>
      Aplicar Código Exclusivo
      <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
      </svg>
    </a>
  </div>
</section>
